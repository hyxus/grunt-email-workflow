--- layout: default.hbs subject: Password Reset ---
<span class="preheader">Password Reset</span>
<div class="header">
  <table>
    <tr>
      <td class="align-center">
        <a href="https://flight.hyxus.com">
          <img src="http://flight.hyxus.com/assets/images/HYXUS_LOGO_SQUARE_WHITE.png" height="50" alt="Mailgun">
        </a>
      </td>
    </tr>
  </table>
</div>
<table class="main">
  <tr>
    <td class="wrapper">
      <table>
        <tr>
          <td>
            <p>We've recieved a request to reset your password - just click the link below to get started! If you did not request
              this, please email us
              <a href="mailto:support@hyxus.com">support@hyxus.com.</a>
            </p>
            <br /> {{> button type='primary' url='<%= invoiceUrl %>' title='Reset' }}
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
